{
  "name": "gerenciador-de-bases",
  "version": "2.1.7",
  "description": "App unificado para limpeza, consulta e enriquecimento de bases.",
  "author": "Davi Abra√£o",
  "main": "main.js",
  "scripts": {
    "start": "electron . --max-old-space-size=8192",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Inativox/NOVOAGORAVAI"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "csv-parse": "^6.1.0",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.1.1",
    "exceljs": "^4.3.0",
    "firebase-admin": "^12.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.daviabraao.gerenciadordebases",
    "productName": "Gerenciador de Bases",
    "extraResources": [
      {
        "from": "firebase-credentials.json",
        "to": "firebase-credentials.json"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Inativox",
        "repo": "NOVOAGORAVAI"
      }
    ]
  }
} 
